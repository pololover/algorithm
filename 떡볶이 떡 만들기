n,m = map(int,input().split())
array = list(map(int,input().split()))

#요청한 값보다 크기만하면 갈수록 최적의 값이라는 것이 key point
start =0
end =max(array)

result = 0

while(start <=end):
  total =0
  mid = (start+end)//2
  for a in array:
    if a>mid:
      total += a-mid
    
  if total >= m:
    result = mid
    start = mid+1
  else :
    end = mid-1

print(result)
