n,m = map(int,input().split())
graph = []
for i in range(n):
  graph.append(list(map(int,input())))


def dfs(x,y):
  #탐색하면서 인덱스가 높아질 수 있기 때문에 해당 조건식을 걸어야한다.
  if x <= -1 or x >=n or y<= -1 or y>= m:
    return False
  
  if graph[x][y] ==1:
    return False
  graph[x][y] = 1
  dfs(x-1,y)
  dfs(x+1,y)
  dfs(x,y-1)
  dfs(x,y+1)
  return True
  
result = 0
for i in range(n):
  for j in range(m):
    if dfs(i,j) == True:
      result +=1

print(result)
